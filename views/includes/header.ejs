<!-- Font Awesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<nav class="navbar navbar-expand-lg bg-orange border-bottom shadow-sm py-3">
  <div class="container-fluid px-3">
    <a class="navbar-brand fw-bold fs-4 d-flex align-items-center" href="/pins">
      <i class="fa-solid fa-thumbtack me-2 fs-3 text-white"></i>
      <span class="text-white">PinBoard</span><span class="text-light">App</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse mt-3 mt-lg-0 justify-content-lg-end" id="navbarMain">
      <ul class="navbar-nav ms-auto gap-2 text-center text-lg-start">
        <li class="nav-item">
          <a class="nav-link fw-semibold px-3 py-2 rounded hover-bg" href="/boards">
            <i class="fa-solid fa-house me-2"></i>Home
          </a>
        </li>

        <% if (!currentUser) { %>
          <li class="nav-item">
            <a class="nav-link fw-semibold px-3 py-2 rounded hover-bg" href="/login">
              <i class="fa-solid fa-right-to-bracket me-2"></i>Login
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link fw-semibold px-3 py-2 rounded hover-bg" href="/register">
              <i class="fa-solid fa-user-plus me-2"></i>Register
            </a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <form action="/logout" method="POST" class="d-inline">
              <button class="nav-link btn fw-semibold px-3 py-2 rounded hover-bg w-100 text-start text-lg-center" style="border: none;">
                <i class="fa-solid fa-right-from-bracket me-2"></i>Logout
              </button>
            </form>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<style>
  .bg-orange {
    background-color: #ff8c42 !important;
  }

  .navbar .nav-link {
    color: white !important;
  }

  .navbar .nav-link:hover,
  .hover-bg:hover {
    background-color: #ffad66 !important;
    color: black !important;
  }

  .navbar .fa-solid {
    color: white;
  }

  @media (max-width: 576px) {
    .navbar-nav .nav-link {
      font-size: 1rem;
      padding: 10px;
    }
  }
</style>
