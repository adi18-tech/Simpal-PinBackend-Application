<% layout('layout/boilerplate') -%>

<div class="container mt-4">
  <h2 class="mb-4">Add New Pin to "<%= board.name %>"</h2>

  <form action="/boards/<%= board._id %>/pins" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-label">Pin Title</label>
      <input type="text" class="form-control" id="title" name="title" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" id="description" name="description" rows="3"></textarea>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Upload Image</label>
      <input type="file" class="form-control" id="image" name="image">
    </div>

    <button type="submit" class="btn btn-success">Create Pin</button>
  </form>
</div>
